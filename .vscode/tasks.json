{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WDR",
            "type": "process",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-NoProfile",
                "-Command",
                "Start-Process",
                "powershell.exe",
                "-ArgumentList",
                "'-ExecutionPolicy Bypass -NoProfile -NoExit -File \"${workspaceFolder}\\build.ps1\"'",
                "-Verb",
                "RunAs"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
